<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="30dp"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context=".AdlibBannerActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Banner Activity"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:textStyle="bold"/>


    <Button
            android:id="@+id/banner_load_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 * 50 AD Load"/>

    <Button
            android:id="@+id/banner_load_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 * 100 AD Load"/>

    <Button
            android:id="@+id/banner_load_250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 * 250 AD Load"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    <FrameLayout
            android:id="@+id/ad_container_320_50"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/border_green"
            android:textStyle="bold">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="AD Container 320 * 50"/>
    </FrameLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <FrameLayout
            android:id="@+id/ad_container_320_100"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:text="AD Container 320 * 100"
            android:background="@drawable/border_blue"
            android:textStyle="bold">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="AD Container 320 * 100"/>

        <com.nhnace.adlib.AdlibAdView
                android:id="@+id/ad_view_320_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    <FrameLayout
            android:id="@+id/ad_container_300_250"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="@drawable/border_red"
            android:text="AD Container 300 * 250"
            android:textStyle="bold">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="AD Container 300 * 250"/>

        <com.nhnace.adlib.AdlibAdView
                android:id="@+id/ad_view_300_250"
                app:adUnitSize="half_banner"
                app:adUnitId="8f4b06b6132413225e3e9f5ca8d2e05d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

    </FrameLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>