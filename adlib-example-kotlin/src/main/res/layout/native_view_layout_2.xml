<?xml version="1.0" encoding="utf-8"?>
<com.nhnace.adlib.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <com.nhnace.adlib.nativead.NativeMediaContentView
                android:id="@+id/ad_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="6dp" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="8dp" />
            </LinearLayout>

        </LinearLayout>

        <com.nhnace.adlib.nativead.NativeMediaContentView
            android:id="@+id/ad_media_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3" />

        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>

</com.nhnace.adlib.nativead.NativeAdView>
